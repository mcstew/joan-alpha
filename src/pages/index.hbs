<html>

  <head>
    <title>Joan [Alpha]</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
      body { font-family: Arial, sans-serif; margin: 0; padding: 0;
      background-color: #f4f4f4; } #chat-container { max-width: 960px; margin:
      auto; padding: 20px; background-color: #fff; box-shadow: 0 0 10px rgba(0,
      0, 0, 0.1); } #chat-output { height: 400px; overflow-y: scroll; border:
      1px solid #ccc; padding: 20px; /* Added padding */ margin-bottom: 20px; }
      #chat-input { width: 80%; padding: 10px; } button { width: 18%; padding:
      11px; margin-top: 11px; background-color: #007bff; color: white; border:
      none; cursor: pointer; }
    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

   <body>
    <div id="chat-container">
      <h1>Joan Alpha Test</h1>
      <div id="chat-output"></div>
      <div>
        <input type="text" id="chat-input" />
        <button onclick="sendMessage()">Send</button>
      </div>
    </div>
    <script>
      function sendMessage() {
        console.log("Sending message...");
        const chatInput = document.getElementById("chat-input");
        const chatOutput = document.getElementById("chat-output");
        const userInput = chatInput.value;
        const serverUrl = "https://joan-alpha.glitch.me/api/chat"; // Replace everything before /api/chat with your Glitch URL

        axios.post(serverUrl, { userInput: userInput })
          .then((response) => {
            const botReply = response.data.message;
            chatOutput.innerHTML += `<p>User: ${userInput}</p>`;
            chatOutput.innerHTML += `<p>Bot: ${botReply}</p>`;
            chatOutput.scrollTop = chatOutput.scrollHeight;
          })
          .catch((error) => {
            console.error("Error:", error);
            chatOutput.innerHTML += `<p>Bot: Sorry, I couldn't process that request.</p>`;
          });

        chatInput.value = "";
      }
    </script>
  </body>
</html>